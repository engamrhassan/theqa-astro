    text-align: center;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .popular-company-header {
    text-align: right;
  }

  /* Row Styles */
  .popular-broker-row {
    border-bottom: 1px solid #e5e7eb;
    transition: background-color 0.2s ease;
  }

  .popular-broker-row:hover {
    background-color: #f9fafb;
  }

  .popular-broker-row:last-child {
    border-bottom: none;
  }

  .popular-broker-cell {
    padding: 1rem 0.75rem;
    text-align: center;
    vertical-align: middle;
  }

  /* Company Cell */
