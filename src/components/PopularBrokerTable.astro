  }

  @media (max-width: 480px) {
    :global(.popular-table-header),
    :global(.popular-broker-row) {
      grid-template-columns: 1.8fr 1fr 1fr;
      padding: 10px 12px;
    }

    :global(.popular-company-info) {
      gap: 8px;
    }

    :global(.popular-company-name) {
      font-size: 13px;
    }

    :global(.popular-company-logo) {
      width: 36px;
      height: 36px;
      font-size: 8px;
    }

    :global(.popular-investors-count) {
      font-size: 15px;
    }

    :global(.popular-founding-year) {
      font-size: 13px;
    }
  }
</style>

<script>
  // Show fallback popular table if dynamic content doesn't load
  setTimeout(() => {
    const fallbackTable = document.querySelector('.fallback-popular-table');
    
    if (fallbackTable) {
      // Check if dynamic content was loaded
      const dynamicContent = document.querySelector('.popular-table-grid');
      
      if (!dynamicContent) {
        (fallbackTable as HTMLElement).style.display = 'block';
      }
    }
  }, 3000); // Show fallback after 3 seconds
</script>
