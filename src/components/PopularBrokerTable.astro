    text-align: right;
  }

  .popular-company-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: flex-end;
  }

  .popular-company-logo {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.75rem;
    color: white;
    flex-shrink: 0;
  }

  .popular-logo-text {
    font-size: 0.75rem;
    font-weight: 700;
  }

  .popular-company-name {
    font-weight: 600;
    color: #1f2937;
    font-size: 0.875rem;
  }

