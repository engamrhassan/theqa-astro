    color: #7c3aed;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-weight: 600;
    font-size: 0.75rem;
  }

  /* Footer Styles */
  .popular-table-footer {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    text-align: center;
    padding: 0;
  }

  .popular-footer-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem;
    color: #1f2937;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .popular-footer-icon {
