---
// src/components/BeginnerBrokerTable.astro
export interface Props {
  title?: string;
}

const { 
  title = "أفضل شركات التداول للمبتدئين" 
} = Astro.props;

const brokers = [
  {
    id: 1,
    name: "Evest",
    nameEn: "Evest", 
    minDeposit: "50",
    rating: "4.5",
    logo: "evest",
    color: "#1e40af"
  },
  {
    id: 2,
    name: "AvaTrade",
    nameEn: "AvaTrade",
    minDeposit: "100", 
    rating: "4",
    logo: "avatrade",
    color: "#4f46e5"
  },
  {
    id: 3,
    name: "XTB",
    nameEn: "XTB",
    minDeposit: "100",
    rating: "4",
    logo: "xtb", 
    color: "#dc2626"
  },
  {
    id: 4,
    name: "Exness",
    nameEn: "Exness",
    minDeposit: "10",
    rating: "4.5",
    logo: "exness",
    color: "#fbbf24"
  }
];
---

<div class="broker-table-wrapper">
  <div class="broker-table">
    <!-- Header -->
    <div class="table-header">
      <div class="header-cell company-header">الشركة</div>
      <div class="header-cell deposit-header">أقل مبلغ للإيداع</div>
      <div class="header-cell rating-header">التقييم</div>
    </div>

    <!-- Broker Rows -->
    {brokers.map((broker) => (
      <div class="broker-row">
        <div class="broker-cell company-cell">
          <div class="company-info">
            <div class="company-logo" style={`background: ${broker.color === '#fbbf24' ? '#fbbf24; color: #1f2937' : broker.color}`}>
              <span class="logo-text">{broker.nameEn}</span>
            </div>
            <span class="company-name">{broker.nameEn}</span>
          </div>
        </div>
        <div class="broker-cell deposit-cell">
          <span class="deposit-amount">{broker.minDeposit}</span>
        </div>
        <div class="broker-cell rating-cell">
          <span class="rating-value">{broker.rating}/5</span>
        </div>
      </div>
    ))}

    <!-- Footer -->
    <div class="table-footer">
      <div class="footer-content">
        <span class="footer-icon">⚡</span>
        <span class="footer-text">{title}</span>
      </div>
    </div>
  </div>
</div>

<style>
  .broker-table-wrapper {
    width: 100%;
    max-width: 800px;
    margin: 2rem auto;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    background: white;
  }

  .broker-table {
    width: 100%;
  }

  /* Header */
  .table-header {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    background: #e5e7eb;
    padding: 16px 20px;
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  .header-cell {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .company-header {
    justify-content: flex-end;
  }

  /* Broker Rows */
  .broker-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    padding: 20px;
    border-bottom: 1px solid #f3f4f6;
    align-items: center;
  }

  .broker-row:hover {
    background: #f8fafc;
  }

  .broker-cell {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Company Cell */
  .company-cell {
    justify-content: flex-end;
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .company-name {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  .company-logo {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 10px;
    text-align: center;
    flex-shrink: 0;
  }

  .logo-text {
    line-height: 1;
  }

  /* Deposit Cell */
  .deposit-amount {
    font-weight: 700;
    font-size: 18px;
    color: #111827;
  }

  /* Rating Cell */
  .rating-value {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  /* Footer */
  .table-footer {
    background: #e5e7eb;
    padding: 16px 20px;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .footer-icon {
    font-size: 16px;
  }

  .footer-text {
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .broker-table-wrapper {
      margin: 1rem;
      border-radius: 12px;
    }

    .table-header,
    .broker-row {
      padding: 12px 16px;
    }

    .company-info {
      gap: 12px;
    }

    .company-name {
      font-size: 14px;
    }

    .company-logo {
      width: 40px;
      height: 40px;
      font-size: 9px;
    }

    .deposit-amount {
      font-size: 16px;
    }

    .rating-value {
      font-size: 14px;
    }

    .header-cell,
    .footer-text {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .table-header,
    .broker-row {
      grid-template-columns: 1.8fr 1fr 1fr;
      padding: 10px 12px;
    }

    .company-info {
      gap: 8px;
    }

    .company-name {
      font-size: 13px;
    }

    .company-logo {
      width: 36px;
      height: 36px;
      font-size: 8px;
    }

    .deposit-amount {
      font-size: 15px;
    }

    .rating-value {
      font-size: 13px;
    }
  }
</style>