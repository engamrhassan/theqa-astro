---
// src/components/BeginnerBrokerTable.astro
export interface Props {
  title?: string;
  showPlaceholder?: boolean;
}

const { 
  title = "أفضل شركات التداول للمبتدئين",
  showPlaceholder = true
} = Astro.props;
---

{showPlaceholder && (
  <div class="beginner-brokers-placeholder">
    <!-- BEGINNER_BROKERS_PLACEHOLDER -->
    <div class="fallback-beginner-table">
      <div class="broker-table-wrapper">
        <table class="broker-table">
          <!-- Header -->
          <thead>
            <tr class="table-header">
              <th class="header-cell company-header">الشركة</th>
              <th class="header-cell deposit-header">أقل مبلغ للإيداع</th>
              <th class="header-cell rating-header">التقييم</th>
            </tr>
          </thead>

          <!-- Fallback Broker Rows -->
          <tbody>
            <tr class="broker-row">
              <td class="broker-cell company-cell">
                <div class="company-info">
                  <div class="company-logo" style="background: #1e40af">
                    <span class="logo-text">EV</span>
                  </div>
                  <span class="company-name">Evest</span>
                </div>
              </td>
              <td class="broker-cell deposit-cell">
                <span class="deposit-amount">50</span>
              </td>
              <td class="broker-cell rating-cell">
                <span class="rating-value">4.6/5</span>
              </td>
            </tr>

            <tr class="broker-row">
              <td class="broker-cell company-cell">
                <div class="company-info">
                  <div class="company-logo" style="background: #4f46e5">
                    <span class="logo-text">AT</span>
                  </div>
                  <span class="company-name">AvaTrade</span>
                </div>
              </td>
              <td class="broker-cell deposit-cell">
                <span class="deposit-amount">100</span>
              </td>
              <td class="broker-cell rating-cell">
                <span class="rating-value">4.1/5</span>
              </td>
            </tr>

            <tr class="broker-row">
              <td class="broker-cell company-cell">
                <div class="company-info">
                  <div class="company-logo" style="background: #dc2626">
                    <span class="logo-text">XT</span>
                  </div>
                  <span class="company-name">XTB</span>
                </div>
              </td>
              <td class="broker-cell deposit-cell">
                <span class="deposit-amount">250</span>
              </td>
              <td class="broker-cell rating-cell">
                <span class="rating-value">4.3/5</span>
              </td>
            </tr>

            <tr class="broker-row">
              <td class="broker-cell company-cell">
                <div class="company-info">
                  <div class="company-logo" style="background: #fbbf24; color: #1f2937">
                    <span class="logo-text">EX</span>
                  </div>
                  <span class="company-name">Exness v2</span>
                </div>
              </td>
              <td class="broker-cell deposit-cell">
                <span class="deposit-amount">10</span>
              </td>
              <td class="broker-cell rating-cell">
                <span class="rating-value">4.8/5</span>
              </td>
            </tr>
          </tbody>

          <!-- Footer -->
          <tfoot>
            <tr>
              <td colspan="3" class="table-footer">
                <div class="footer-content">
                  <span class="footer-icon">⚡</span>
                  <span class="footer-text">{title}</span>
                </div>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
)}

<style>
  .broker-table-wrapper {
    width: 100%;
    max-width: 800px;
    margin: 2rem auto;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    background: white;
  }

  .broker-table {
    width: 100%;
    border-collapse: collapse;
  }

  /* Header */
  .table-header {
    background: #e5e7eb;
  }

  .header-cell {
    padding: 16px 20px;
    font-weight: 600;
    color: #374151;
    font-size: 14px;
    text-align: center;
    border: none;
  }

  .company-header {
    text-align: right;
    width: 40%;
  }

  .deposit-header,
  .rating-header {
    width: 30%;
  }

  /* Broker Rows */
  .broker-row:hover {
    background: #f8fafc;
  }

  .broker-cell {
    padding: 20px;
    border-bottom: 1px solid #f3f4f6;
    text-align: center;
    vertical-align: middle;
  }

  /* Company Cell */
  .company-cell {
    text-align: right;
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .company-name {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  .company-logo {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 10px;
    text-align: center;
    flex-shrink: 0;
  }

  .logo-text {
    line-height: 1;
  }

  /* Deposit Cell */
  .deposit-amount {
    font-weight: 700;
    font-size: 18px;
    color: #111827;
  }

  /* Rating Cell */
  .rating-value {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  /* Footer */
  .table-footer {
    background: #e5e7eb;
    padding: 16px 20px;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .footer-icon {
    font-size: 16px;
  }

  .footer-text {
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .broker-table-wrapper {
      margin: 1rem;
      border-radius: 12px;
    }

    .table-header,
    .broker-row {
      padding: 12px 16px;
    }

    .company-info {
      gap: 12px;
    }

    .company-name {
      font-size: 14px;
    }

    .company-logo {
      width: 40px;
      height: 40px;
      font-size: 9px;
    }

    .deposit-amount {
      font-size: 16px;
    }

    .rating-value {
      font-size: 14px;
    }

    .header-cell,
    .footer-text {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .table-header,
    .broker-row {
      grid-template-columns: 1.8fr 1fr 1fr;
      padding: 10px 12px;
    }

    .company-info {
      gap: 8px;
    }

    .company-name {
      font-size: 13px;
    }

    .company-logo {
      width: 36px;
      height: 36px;
      font-size: 8px;
    }

    .deposit-amount {
      font-size: 15px;
    }

    .rating-value {
      font-size: 13px;
    }
  }

  /* Fallback Beginner Table */
  .fallback-beginner-table {
    display: none; /* Will be shown if JS/Worker fails */
  }

  .beginner-brokers-placeholder {
    min-height: 400px;
    position: relative;
  }

  /* Dynamic beginner table styles (added by Worker) */
  :global(.beginner-table-grid) {
    margin: 2rem auto;
    max-width: 800px;
  }

  :global(.beginner-broker-table) {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    background: white;
  }

  :global(.beginner-table-header) {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    background: #e5e7eb;
    padding: 16px 20px;
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  :global(.beginner-header-cell) {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  :global(.beginner-company-header) {
    justify-content: flex-end;
  }

  :global(.beginner-broker-row) {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    padding: 20px;
    border-bottom: 1px solid #f3f4f6;
    align-items: center;
  }

  :global(.beginner-broker-row:hover) {
    background: #f8fafc;
  }

  :global(.beginner-broker-cell) {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.beginner-company-cell) {
    justify-content: flex-end;
  }

  :global(.beginner-company-info) {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  :global(.beginner-company-name) {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  :global(.beginner-company-logo) {
    width: 48px;
    height: 48px;
    min-width: 48px;
    min-height: 48px;
    max-width: 48px;
    max-height: 48px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 10px;
    text-align: center;
    flex-shrink: 0;
  }

  :global(.beginner-logo-text) {
    line-height: 1;
  }

  :global(.beginner-deposit-amount) {
    font-weight: 700;
    font-size: 18px;
    color: #111827;
  }

  :global(.beginner-rating-value) {
    font-weight: 600;
    font-size: 16px;
    color: #2563eb;
  }

  :global(.beginner-table-footer) {
    background: #e5e7eb;
    padding: 16px 20px;
  }

  :global(.beginner-footer-content) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  :global(.beginner-footer-icon) {
    font-size: 16px;
  }

  :global(.beginner-footer-text) {
    font-weight: 600;
    color: #374151;
    font-size: 14px;
  }

  /* Responsive for dynamic content */
  @media (max-width: 768px) {
    :global(.beginner-table-header),
    :global(.beginner-broker-row) {
      padding: 12px 16px;
    }

    :global(.beginner-company-info) {
      gap: 12px;
    }

    :global(.beginner-company-name) {
      font-size: 14px;
    }

    :global(.beginner-company-logo) {
      width: 40px;
      height: 40px;
      font-size: 9px;
    }

    :global(.beginner-deposit-amount) {
      font-size: 16px;
    }

    :global(.beginner-rating-value) {
      font-size: 14px;
    }

    :global(.beginner-header-cell),
    :global(.beginner-footer-text) {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    :global(.beginner-table-header),
    :global(.beginner-broker-row) {
      grid-template-columns: 1.8fr 1fr 1fr;
      padding: 10px 12px;
    }

    :global(.beginner-company-info) {
      gap: 8px;
    }

    :global(.beginner-company-name) {
      font-size: 13px;
    }

    :global(.beginner-company-logo) {
      width: 36px;
      height: 36px;
      font-size: 8px;
    }

    :global(.beginner-deposit-amount) {
      font-size: 15px;
    }

    :global(.beginner-rating-value) {
      font-size: 13px;
    }
  }
</style>

<script>
  // Show fallback beginner table if dynamic content doesn't load
  setTimeout(() => {
    const fallbackTable = document.querySelector('.fallback-beginner-table');
    
    if (fallbackTable) {
      // Check if dynamic content was loaded
      const dynamicContent = document.querySelector('.beginner-table-grid');
      
      if (!dynamicContent) {
        (fallbackTable as HTMLElement).style.display = 'block';
      }
    }
  }, 3000); // Show fallback after 3 seconds
</script>