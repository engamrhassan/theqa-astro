</style>

<script>
     // Show fallback brokers if dynamic content doesn't load
   setTimeout(() => {
     const fallbackBrokers = document.querySelector('.fallback-brokers');
     
     if (fallbackBrokers) {
       // Check if dynamic content was loaded
       const dynamicContent = document.querySelector('.companies-grid');
       
       if (!dynamicContent) {
         (fallbackBrokers as HTMLElement).style.display = 'flex';
       }
     }
   }, 3000); // Show fallback after 3 seconds
</script>