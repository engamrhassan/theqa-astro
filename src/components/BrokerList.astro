    font-weight: 700;
    color: #111827;
    line-height: 1;
  }

  :global(.company-open-account-btn) {
    background: #fbbf24;
    color: #1f2937;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    min-width: 100px;
    flex-shrink: 0;
  }

  :global(.company-open-account-btn:hover) {
    background: #f59e0b;
    transform: translateY(-1px);
  }

  /* Legacy styles for backward compatibility */
  :global(.company-placeholder) {
    display: none;
  }

  :global(.company-content) {
    display: none;
  }

  :global(.company-features) {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .brokers-section {
      padding: 2rem 0;
      margin: 2rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .broker-card {
      padding: 12px 16px;
      gap: 12px;
      min-height: 70px;
    }

    .broker-info {
      gap: 16px;
    }

    .broker-details,
    .license {
      min-width: 60px;
    }

    .min-deposit,
    .license-label {
      font-size: 11px;
    }

    .deposit-amount {
      font-size: 16px;
    }

    .license-value {
      font-size: 13px;
    }

    .logo-container {
      width: 60px;
      height: 60px;
    }

    .broker-name {
      font-size: 11px;
    }

    .open-account-btn {
      padding: 10px 16px;
      font-size: 12px;
      min-width: 80px;
    }

    .important-notice {
      flex-direction: column;
      text-align: center;
    }

    .notice-icon {
      margin: 0 auto;
    }

    :global(.companies-grid) {
      gap: 1rem;
    }

    :global(.company-card) {
      padding: 12px 16px;
      gap: 12px;
      min-height: 70px;
    }

    :global(.company-info) {
      gap: 16px;
    }

    :global(.company-details),
    :global(.company-license) {
      min-width: 60px;
    }

    :global(.company-min-deposit),
    :global(.company-license-label) {
      font-size: 11px;
    }

    :global(.company-deposit-amount) {
      font-size: 16px;
    }

    :global(.company-license-value) {
      font-size: 13px;
    }

    :global(.company-logo-container) {
      width: 60px;
      height: 60px;
    }

    :global(.company-open-account-btn) {
      padding: 10px 16px;
      font-size: 12px;
      min-width: 80px;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 1.75rem;
    }

    .country-indicator {
      font-size: 0.875rem;
      padding: 0.5rem 1rem;
    }

    .broker-card {
      flex-direction: column;
      text-align: center;
      min-height: auto;
      padding: 16px;
    }

    .broker-info {
      justify-content: space-around;
      width: 100%;
      margin-bottom: 12px;
    }

    .logo-container {
      width: 50px;
      height: 50px;
      margin-bottom: 8px;
    }

    :global(.company-card) {
      flex-direction: column;
      text-align: center;
