    fill: #2563eb;
  }

  :global(.company-license) {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-width: 80px;
  }

  :global(.company-license-label) {
    font-size: 12px;
    color: #6b7280;
    margin-bottom: 2px;
    line-height: 1;
  }

  :global(.company-license-value) {
    font-size: 14px;
    font-weight: 600;
    color: #111827;
    line-height: 1;
  }

  :global(.company-details) {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-width: 80px;
  }

  :global(.company-min-deposit) {
    font-size: 12px;
    color: #6b7280;
    margin-bottom: 2px;
    line-height: 1;
  }

  :global(.company-deposit-amount) {
